<h1>Listing shows</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Dir</th>
      <th>Tvrage</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Running time</th>
      <th>Is on hiatus</th>
      <th>Hiatus msg</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.title %></td>
        <td><%= show.dir %></td>
        <td><%= show.tvrage_id %></td>
        <td><%= show.start_date %></td>
        <td><%= show.end_date %></td>
        <td><%= show.running_time %></td>
        <td><%= show.is_on_hiatus %></td>
        <td><%= show.hiatus_msg %></td>
        <td><%= link_to 'Show', show %></td>
        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

