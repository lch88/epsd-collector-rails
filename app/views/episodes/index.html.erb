<h1>Listing episodes</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Season</th>
      <th>Episode</th>
      <th>Pcode</th>
      <th>Air date</th>
      <th>Title</th>
      <th>Special</th>
      <th>Tvrage url</th>
      <th>Show</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.number %></td>
        <td><%= episode.season %></td>
        <td><%= episode.episode %></td>
        <td><%= episode.pcode %></td>
        <td><%= episode.air_date %></td>
        <td><%= episode.title %></td>
        <td><%= episode.special %></td>
        <td><%= episode.tvrage_url %></td>
        <td><%= episode.show_id %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

